{
  "name": "Olé sin bover",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Oculta todas las noticias de boca y river",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Olé sin bover"
  },
  "content_scripts": [
    {
      "matches": ["https://www.ole.com.ar/*"],
      "js": ["contentScript.js"],
      "permissions": ["scripting"]
    }
  ],
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "icons": {
    "128": "icon.png"
  }
}
